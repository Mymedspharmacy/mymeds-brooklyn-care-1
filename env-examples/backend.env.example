# üöÄ MyMeds Pharmacy Backend Environment Configuration
# Copy this file to backend/.env and fill in your actual values

# =============================================================================
# üèóÔ∏è APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
# Main database connection
DATABASE_URL="mysql://mymeds_user:YOUR_DB_PASSWORD@localhost:3306/mymeds_production"
DIRECT_URL="mysql://mymeds_user:YOUR_DB_PASSWORD@localhost:3306/mymeds_production"

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# =============================================================================
# üîê JWT & AUTHENTICATION
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_long_and_random
JWT_REFRESH_SECRET=your_super_secure_jwt_refresh_secret_key_here_make_it_long_and_random
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# =============================================================================
# üìß SMTP & EMAIL CONFIGURATION
# =============================================================================
# SMTP Server Settings
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_IGNORE_TLS=false
SMTP_REQUIRE_TLS=true

# Email Authentication
EMAIL_USER=your_email@mymedspharmacyinc.com
EMAIL_PASS=your_app_password_here
SMTP_USER=your_email@mymedspharmacyinc.com
SMTP_PASS=your_app_password_here

# Email Configuration
CONTACT_RECEIVER=admin@mymedspharmacyinc.com
ADMIN_EMAIL=admin@mymedspharmacyinc.com
NOREPLY_EMAIL=noreply@mymedspharmacyinc.com

# Email Templates
EMAIL_FROM_NAME="MyMeds Pharmacy"
EMAIL_FROM_ADDRESS=noreply@mymedspharmacyinc.com

# =============================================================================
# üåê FRONTEND & BACKEND URLs
# =============================================================================
FRONTEND_URL="https://www.mymedspharmacyinc.com"
BACKEND_URL="https://api.mymedspharmacyinc.com"
STAGING_FRONTEND_URL="https://staging.mymedspharmacyinc.com"
STAGING_BACKEND_URL="https://api-staging.mymedspharmacyinc.com"

# =============================================================================
# üë§ ADMIN USER CREATION
# =============================================================================
ADMIN_EMAIL=admin@mymedspharmacyinc.com
ADMIN_PASSWORD=AdminPassword123!
ADMIN_NAME=Admin User
ADMIN_ROLE=ADMIN

# =============================================================================
# üìÅ FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_DIR=/var/log/mymeds/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain
UPLOAD_PATH_PREFIX=/uploads

# =============================================================================
# üõ°Ô∏è SECURITY & RATE LIMITING
# =============================================================================
# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=https://www.mymedspharmacyinc.com,https://staging.mymedspharmacyinc.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# Security Headers
HELMET_ENABLED=true
XSS_PROTECTION=true
CONTENT_SECURITY_POLICY=true

# =============================================================================
# üîç LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=/var/log/mymeds/backend.log
ERROR_LOG_FILE=/var/log/mymeds/backend-error.log

# =============================================================================
# üí≥ PAYMENT & STRIPE CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================================================================
# üì± NOTIFICATIONS & PUSH
# =============================================================================
# Push Notifications (if using)
PUSH_PRIVATE_KEY=your_push_private_key_here
PUSH_PUBLIC_KEY=your_push_public_key_here

# SMS Configuration (if using Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# üîÑ WORDPRESS INTEGRATION
# =============================================================================
WORDPRESS_ENABLED=true
WORDPRESS_SITE_URL=https://blog.mymedspharmacyinc.com
WORDPRESS_USERNAME=your_wordpress_username
WORDPRESS_APPLICATION_PASSWORD=your_wordpress_app_password

# =============================================================================
# üìä ANALYTICS & TRACKING
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Facebook Pixel
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# =============================================================================
# üóìÔ∏è SCHEDULED TASKS
# =============================================================================
# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *"
CLEANUP_SCHEDULE="0 3 * * *"

# =============================================================================
# üß™ TESTING CONFIGURATION
# =============================================================================
# Only for development/testing
TEST_DATABASE_URL="mysql://mymeds_user:YOUR_DB_PASSWORD@localhost:3306/mymeds_test"
TEST_JWT_SECRET=test_jwt_secret_for_testing_only
TEST_EMAIL_USER=test@example.com
TEST_EMAIL_PASS=test_password

# =============================================================================
# üåç ENVIRONMENT SPECIFIC
# =============================================================================
# Development
DEV_FRONTEND_URL="http://localhost:3000"
DEV_BACKEND_URL="http://localhost:5000"

# Staging
STAGING_DATABASE_URL="mysql://mymeds_user:YOUR_DB_PASSWORD@localhost:3306/mymeds_staging"

# Production
PROD_DATABASE_URL="mysql://mymeds_user:YOUR_DB_PASSWORD@localhost:3306/mymeds_production"

# =============================================================================
# üìù NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Keep this file secure and never commit .env to version control
# 3. Use strong, unique passwords for production
# 4. Regularly rotate JWT secrets and database passwords
# 5. Test all configurations in staging before production

