{
  "name": "mymeds-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "postinstall": "npm run build",
    "prisma:deploy": "npx prisma migrate deploy",
    "create-admin": "node create-admin-user.js",
    "generate-secrets": "node generate-jwt-secret.js",
    "security-check": "node security-monitor.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "ts-node src/scripts/seed.ts",
    "backup:database": "ts-node src/scripts/backup-database.ts",
    "backup:files": "ts-node src/scripts/backup-files.ts",
    "backup:cleanup": "ts-node src/scripts/backup-cleanup.ts",
    "backup:all": "npm run backup:database && npm run backup:files",
    "monitor:start": "pm2 start ecosystem.config.js",
    "monitor:stop": "pm2 stop ecosystem.config.js",
    "monitor:restart": "pm2 restart ecosystem.config.js",
    "monitor:reload": "pm2 reload ecosystem.config.js",
    "monitor:status": "pm2 status",
    "monitor:logs": "pm2 logs",
    "monitor:dashboard": "pm2 monit",
    "deploy:production": "npm run build && npm run monitor:reload",
    "health:check": "curl -f http://localhost:4000/api/health || exit 1",
    "security:audit": "npm audit && npm audit fix",
    "performance:test": "artillery run load-tests/artillery-config.yml",
    "logs:rotate": "logrotate -f /etc/logrotate.d/mymeds",
    "system:status": "mymeds-monitor",
    "system:health": "mymeds-health"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@supabase/supabase-js": "^2.52.0",
    "@types/multer": "^2.0.0",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.0.0",
    "express-status-monitor": "^1.3.4",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "newrelic": "^11.23.2",
    "nodemailer": "^6.9.11",
    "socket.io": "^4.8.1",
    "stripe": "^18.3.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/express-status-monitor": "^1.3.3",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.13.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.4"
  }
}
