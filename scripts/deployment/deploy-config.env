# üè• MyMeds Pharmacy - Deployment Configuration
# Copy this file and update with your actual values

# =============================================================================
# VPS CONNECTION SETTINGS
# =============================================================================
VPS_HOST=your-vps-ip-address
VPS_USER=root
VPS_SSH_PORT=22
VPS_SSH_KEY_PATH=~/.ssh/id_rsa

# =============================================================================
# DOMAIN & SSL SETTINGS
# =============================================================================
DOMAIN=mymedspharmacyinc.com
SSL_EMAIL=admin@mymedspharmacyinc.com
SSL_PROVIDER=letsencrypt

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
NODE_VERSION=18
PORT=4000
FRONTEND_PORT=80
HTTPS_PORT=443

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mymeds_production
DB_USER=mymeds_user
DB_PASSWORD=your_secure_database_password

# =============================================================================
# DEPLOYMENT PATHS
# =============================================================================
DEPLOY_DIR=/var/www/mymeds
BACKUP_DIR=/var/backups/mymeds
LOG_DIR=/var/log/mymeds
NGINX_CONFIG_DIR=/etc/nginx/sites-available
NGINX_ENABLED_DIR=/etc/nginx/sites-enabled

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
FIREWALL_ENABLED=true
FAIL2BAN_ENABLED=true
SSL_REDIRECT=true
SECURITY_HEADERS=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
PM2_ENABLED=true
PM2_INSTANCES=max
PM2_MEMORY_LIMIT=1G
LOG_ROTATION_ENABLED=true
HEALTH_CHECK_ENABLED=true

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
AUTO_BACKUP_BEFORE_DEPLOY=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
WEBHOOK_URL=
DISCORD_WEBHOOK=
SLACK_WEBHOOK=
EMAIL_NOTIFICATIONS=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
NGINX_GZIP=true
NGINX_CACHE=true
PM2_CLUSTER_MODE=true
REDIS_ENABLED=false

# =============================================================================
# DEVELOPMENT SETTINGS (for testing)
# =============================================================================
# Uncomment these for development/testing
# VPS_HOST=localhost
# VPS_USER=your-local-user
# DOMAIN=localhost
# SSL_EMAIL=test@localhost