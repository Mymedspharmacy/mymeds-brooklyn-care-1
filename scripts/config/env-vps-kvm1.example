# MyMeds Pharmacy VPS KVM1 Hostinger Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION (MySQL on VPS)
# =============================================================================
DATABASE_URL=mysql://mymeds_user:your-secure-password@localhost:3306/mymeds_db
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=mymeds_db
DATABASE_USER=mymeds_user
DATABASE_PASSWORD=your-secure-password

# =============================================================================
# REDIS CACHE CONFIGURATION (VPS Local)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# JWT SECURITY
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# WOOCOMMERCE INTEGRATION
# =============================================================================
WOOCOMMERCE_STORE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=your-consumer-key
WOOCOMMERCE_CONSUMER_SECRET=your-consumer-secret
WOOCOMMERCE_WEBHOOK_SECRET=your-webhook-secret

# =============================================================================
# STRIPE PAYMENT (Optional - if keeping Stripe alongside WooCommerce)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_SECURE=true

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
NEWRELIC_LICENSE_KEY=your-newrelic-license-key
NEWRELIC_APP_NAME=MyMeds-Pharmacy-VPS

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here
COOKIE_SECRET=your-cookie-secret-key-here

# =============================================================================
# RATE LIMITING (VPS Optimized)
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_MAX_REQUESTS=20
RATE_LIMIT_CONTACT_MAX_REQUESTS=50

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=300000
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=300000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/mymeds
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# PERFORMANCE OPTIMIZATION (VPS Specific)
# =============================================================================
UV_THREADPOOL_SIZE=64
NODE_OPTIONS=--max-old-space-size=1024 --optimize-for-size
PM2_INSTANCES=2
PM2_EXEC_MODE=cluster

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=/var/backups/mymeds
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# MONITORING SCHEDULE
# =============================================================================
MONITORING_INTERVAL=300
MONITORING_LOG_FILE=/var/log/mymeds/monitor.log

# =============================================================================
# SSL & DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=your-domain.com
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# OPENFDA_API_KEY=your-openfda-api-key
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# FACEBOOK_PIXEL_ID=your-pixel-id

# =============================================================================
# DEVELOPMENT OVERRIDES (Set to false in production)
# =============================================================================
DISABLE_RATE_LIMIT=false
ENABLE_DEBUG_LOGGING=false
ENABLE_TEST_ENDPOINTS=false
